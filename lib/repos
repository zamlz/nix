
# Primary dotfiles directory is just my home directory
export DOTFILES_DIR="$HOME"
export DORFILES_GIT_REPO="git@github.com:zamlz/dotfiles.git"

# All other git repos exist in ~/usr.
export PAPERS_DIR="$HOME/usr/papers"
export PAPERS_GIT_REPO="git@github.com:zamlz/papers.git"

export WEBSITE_DIR="$HOME/usr/website"
export WEBSITE_GIT_REPO="git@github.com:zamlz/blog.git"

# this might be deprecated
export BOOKMARKS_DIR="$HOME/usr/bookmarks"
export BOOKMARKS_GIT_REPO="git@github.com:zamlz/bookmarks.git"

# I plan to deprecate this soon
export LEDGER_DIR="$HOME/usr/ledger"
export LEDGER_GIT_REPO="git@github.com:zamlz/ledger.git"

export PASSWORD_STORE_DIR="$HOME/usr/passwords"
